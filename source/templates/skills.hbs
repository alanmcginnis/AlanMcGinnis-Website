{{#if skills}}
    {{#if icon}}
        <span class="icon {{icon}}"></span>
    {{/if}}
    {{#if sectionTitle}}
        <h2 class="section-title">{{sectionTitle}}</h2>
    {{/if}}
        <div class="skillset">
            <div class="details">
                <ul class="skills-list">
                    {{#each skills}}
                        <li>{{this}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
{{/if}}